<% if @animes.length == Anime.all.length %>
<div class="banner">
<%= image_tag "thumb-1920-856712.jpg" %>
<div class="layer">
  Anime At your finger tips
</div>
</div>
<% end %>
<div class="side-options">
options
</div>
<div class="main-body">
<h2> All Animes </h2>


<%@animes.each do |anime| %>
  <%= link_to anime.title, anime_path(anime) %> <br>
  <%if !anime.image.blank? %>
    <%= image_tag anime.image.split('"')[1] %><br>
  <% end %><br>
<%end  %>




<% if @animes.blank? %>
  <h5>No animes containing the term <%= params[:search] %>.</h5>
<% end %>
