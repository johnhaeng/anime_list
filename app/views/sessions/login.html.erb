<% if flash[:error] %>
  <li><%= flash[:error] %></li>
<% end %>
<div>
<%= form_tag ({controller: 'sessions', action: 'login', method: 'post'}) do %>
<div>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
  <%= password_field_tag :password %>
  </div>
  <div>
   <%= submit_tag "Log In"%>
   </div>

<% end %>
</div>
